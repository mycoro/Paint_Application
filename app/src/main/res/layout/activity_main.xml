<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/drawing_fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/palette_container">

        <ImageView
            android:id="@+id/background_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/background_iv"
            android:scaleType="centerCrop"
            tools:src="@drawable/frog_fountain"
            />

        <edu.tcu.mlcoronilla.paint.DrawingView
            android:id="@+id/drawing_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/tint"/>

    </FrameLayout>
    <LinearLayout
        android:id="@+id/palette_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/icon_ll">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="5dp"
            android:background="@color/black"
            android:src="@drawable/path_color_normal"
            tools:ignore="ImageContrastCheck"
            android:contentDescription="@string/box_text">
        </ImageView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@color/red"
            android:src="@drawable/path_color_normal"
            tools:ignore="ImageContrastCheck"
            android:contentDescription="@string/box_text">
        </ImageView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@color/green"
            android:src="@drawable/path_color_normal"
            tools:ignore="ImageContrastCheck"
            android:contentDescription="@string/box_text">
        </ImageView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@color/blue"
            android:src="@drawable/path_color_normal"
            tools:ignore="ImageContrastCheck"
            android:contentDescription="@string/box_text">
        </ImageView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@color/tcu_purple"
            android:src="@drawable/path_color_normal"
            tools:ignore="ImageContrastCheck"
            android:contentDescription="@string/box_text">
        </ImageView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@color/off_white"
            android:src="@drawable/path_color_normal"
            tools:ignore="ImageContrastCheck"
            android:contentDescription="@string/box_text">
        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/icon_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/brush_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_brush"
            android:background="@color/light_gray"
            android:contentDescription="@string/icon_decrp"
            tools:ignore="ImageContrastCheck"
            android:padding="5dp"
            android:scaleType="centerInside">
        </ImageView>
        <ImageView
            android:id="@+id/gallery_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_gallery"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:background="@color/light_gray"
            android:contentDescription="@string/icon_decrp"
            tools:ignore="ImageContrastCheck">
        </ImageView>
        <ImageView
            android:id="@+id/undo_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_undo"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:background="@color/light_gray"
            android:contentDescription="@string/icon_decrp"
            tools:ignore="ImageContrastCheck">
        </ImageView>
        <ImageView
            android:id="@+id/save_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_save"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:padding="4dp"
            android:scaleType="centerInside"
            android:background="@color/light_gray"
            android:contentDescription="@string/icon_decrp"
            tools:ignore="ImageContrastCheck">
        </ImageView>

    </LinearLayout>
    

</androidx.constraintlayout.widget.ConstraintLayout>